<body>
  <div class="container">
    <h1>姓名字帖生成器（繁體）</h1>
    <div class="input-area">
      <input type="text" id="nameInput" maxlength="8" placeholder="請輸入姓名（可多於一個字）" autofocus />
      <button onclick="generateGrid()">生成字帖</button>
    </div>
    <div>
      <button class="print-btn" onclick="window.print()">列印字帖</button>
    </div>
    <div class="grid-area" id="gridArea"></div>
  </div>
  <script>
    function createTiantige(char) {
      return `
        <div class="tiantige">
          <div class="stroke horizontal"></div>
          <div class="stroke vertical"></div>
          <div class="stroke diag1"></div>
          <div class="stroke diag2"></div>
          <div class="char">${char}</div>
        </div>
      `;
    }

    function generateGrid() {
      const name = document.getElementById('nameInput').value.trim();
      const gridArea = document.getElementById('gridArea');
      gridArea.innerHTML = '';
      if (!name) return;

      for (const char of name) {
        const charBlock = document.createElement('div');
        charBlock.className = 'char-grid';

        let tiantigeRow = '<div class="tiantige-row">';
        for (let i = 0; i < 10; i++) {
          tiantigeRow += createTiantige(char);
        }
        tiantigeRow += '</div>';

        charBlock.innerHTML = `
          <div class="big-char">${char}</div>
          ${tiantigeRow}
        `;
        gridArea.appendChild(charBlock);
      }
    }

    // 支援Enter鍵生成
    document.getElementById('nameInput').addEventListener('keydown', function(e){
      if (e.key === 'Enter') generateGrid();
    });
  </script>
</body>
